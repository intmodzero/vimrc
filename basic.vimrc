" file detection and syntax highlighting
filetype plugin on
syntax on

" autoread when file changed externally
set autoread

" insert spaces when tab is pressed
set expandtab

" set tab length to 4 spaces
set tabstop=4

" convert all spaces to tab
%retab!

" display line number
set number

" set title to file name
set title

" increase undo limit
set history=1000

" ignore case on search
set ignorecase


